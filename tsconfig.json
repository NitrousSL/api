{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "@enum/*"            : ["./src/sdk/enum/*"],

            "@route/*"           : ["./src/route/*"],
            "@model/*"           : ["./src/model/*"],
            "@package"           : ["./package.json"],
        },
        "declaration": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}